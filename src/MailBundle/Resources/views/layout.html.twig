<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Mail</title>
    <link href="{{ asset("bundles/mail/bootstrap/css/bootstrap.css") }}" rel="stylesheet" type="text/css"
          media="all"/>
    <link href="{{ asset("bundles/mail/css/style.css") }}" rel="stylesheet" type="text/css"
          media="all"/>


        <script src="{{ asset('bundles/mail/jquery/jquery.js') }}" type="text/javascript"></script>
        <script>
            $(function () {
                $('.flash-message').fadeOut(3000);
            });
        </script>
    {% block javascript %}
    {% endblock %}

    {% block stylesheets %}
    {% endblock %}
</head>

<body>


<div class="row top5">
    <div class="col-sm-2">
        <div class="col-sm-offset-4">
            <a href="{{ path("mail_add") }}" class="btn btn-success btn-md">Write</a>
        </div>

        <div class="list-group top7">
            <a href="{{ path("mail_homepage") }}" class="list-group-item">Main</a>
            <a href="{{ path("mail_inbox") }}" class="list-group-item">
                Inbox {{ render(controller("MailBundle:Default:countNewLetters")) }}
            </a>
            <a href="{{ path("mail_outbox") }}" class="list-group-item">Outbox</a>
            <a href="{{ path("mail_deleted") }}" class="list-group-item">Deleted</a>
        </div>

    </div>
    <div class="col-sm-9">
        {% for message in app.session.flashBag.get('failed') %}
            <div class="alert alert-danger flash-message" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success flash-message" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="top30">
            {% block body %}

            {% endblock %}
        </div>
    </div>
</div>

</body>
</html>
