{% extends "MailBundle::layout.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset("bundles/mail/fileuploader/src/jquery.fileuploader.css") }}" media="all" rel="stylesheet">
    <!--<script src="js/jquery.js" crossorigin="anonymous"></script>-->
    <style>
        div.files-div {
            font-family: 'Roboto', sans-serif;
            font-size: 14px;
            line-height: normal;
            color: #47525d;
            background-color: #fff;

            margin: 0;
            padding: 0px;

            width: 560px;
        }
    </style>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('bundles/mail/fileuploader/src/jquery.fileuploader.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/mail/fileuploader/js/custom.js') }}" type="text/javascript"></script>
{% endblock %}


{% block body %}

    <h3>New message</h3>
    <form action="{{ path("mail_add") }}" method="post" enctype="multipart/form-data" class="form-horizontal">

        {{ form_widget(form) }}

        <div class="form-group">
            <label class="col-sm-2 control-label required" for="mailbundle_letter_files">Files:</label>
            <div class="col-sm-10 files-div">
                <input type="file" name="files">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <input type="submit" value="Send" class="btn btn-primary">
            </div>
        </div>
    </form>
{% endblock %}
