{% extends "MailBundle::layout.html.twig" %}

{% block body %}

    <h3>Deleted</h3>
    {% if letters is defined and letters | length > 0 %}
        <div class="row">
            <div class="letter-list-head top10">
                <div class="col-sm-2 col-sm-offset-1">Subject</div>
                <div class="col-sm-3">To</div>
                <div class="col-sm-3">Time</div>
            </div>
        </div>
    {% endif %}

    {% for letter in letters %}
        <a href="{{ path("mail_letter", {id: letter.id}) }}" class="letter-href">
            <div class="row striped letter-subject-1">
                <div class="letter-list top10">
                    <div class="col-sm-2 col-sm-offset-1">{{ letter.subject }}</div>
                    <div class="col-sm-3">{{ letter.receiver }}</div>
                    <div class="col-sm-3">{{ letter.senttime.format("H:i d.m.y") }}</div>


                    <div class="col-sm-1"><a href="{{ path('mail_delete_at_all', {id: letter.id}) }}" class="letter-action-del">Delete</a></div>

                </div>
            </div>
        </a>
    {% else %}
        No letters!
    {% endfor %}
{% endblock %}
